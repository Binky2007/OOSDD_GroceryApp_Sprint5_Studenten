<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.CategoriesView"
             Title="Categories">

    <CollectionView ItemsSource="{Binding Categories}" SelectionMode="Single"
                    SelectionChanged="OnCategorySelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="5">
                    <Label Text="{Binding Name}" FontSize="20" VerticalOptions="Center" HorizontalOptions="Start"/>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>