<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.ProductCategoriesView"
             Title="Product Categories">

    <CollectionView ItemsSource="{Binding ProductCategories}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="5">
                    <Label Text="{Binding Name}" FontSize="20" VerticalOptions="Center" HorizontalOptions="Start"/>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>